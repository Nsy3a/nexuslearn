# Web3.0 AI学习平台环境变量配置

# Web3配置
VITE_WEB3_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
VITE_WALLETCONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID

# IPFS配置（用于NFT存储）
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# API配置
VITE_API_BASE_URL=http://localhost:3000/api

# 区块链网络配置
VITE_CHAIN_ID=1
VITE_CHAIN_NAME=Ethereum Mainnet
VITE_CURRENCY_SYMBOL=ETH
VITE_BLOCK_EXPLORER=https://etherscan.io

# 智能合约地址（示例）
VITE_LEARNING_NFT_CONTRACT=0x...
VITE_GOVERNANCE_TOKEN_CONTRACT=0x...
VITE_STAKING_CONTRACT=0x...

# AI服务配置
VITE_OPENAI_API_KEY=YOUR_OPENAI_API_KEY
VITE_AI_SERVICE_URL=https://api.openai.com/v1

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# 国际化配置
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_FALLBACK_LANGUAGE=en-US

# 功能开关
VITE_ENABLE_WEB3=true
VITE_ENABLE_AI=true
VITE_ENABLE_NFT=true
VITE_ENABLE_STAKING=true

# 分析工具（可选）
VITE_GA_TRACKING_ID=YOUR_GA_TRACKING_ID
VITE_SENTRY_DSN=YOUR_SENTRY_DSN
